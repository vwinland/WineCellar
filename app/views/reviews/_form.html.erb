<%= form_for([@wine, review]) do |f| %>
    <% if review.errors.any? %>
    <div> id="error_explanation">
        <h2><%= pluralize(reviews.errors.count, "error") %>

        <ul>
        <% review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>

<div class="field">
    <div id="star-rating"></div>
  </div>

  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review %><br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>